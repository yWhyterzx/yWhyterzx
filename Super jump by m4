local p = game.Players.LocalPlayer

-- Criar botão na tela
local gui = Instance.new("ScreenGui", p:WaitForChild("PlayerGui"))
local b = Instance.new("TextButton", gui)
b.Size = UDim2.new(0,30,0,50)
b.Position = UDim2.new(0,10,0,10)
b.Text = "macro jump"

-- Função para aplicar o impulso para cima
local function launchPlayer()
    local c = p.Character
    if c then
        local hrp = c:FindFirstChild("HumanoidRootPart")
        if hrp then
            hrp.Velocity = Vector3.new(0, 500, 0)
        end
    end
end

-- Clique no botão
b.MouseButton1Click:Connect(launchPlayer)

-- Pressionar a tecla G
local uis = game:GetService("UserInputService")
uis.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.G then
        launchPlayer()
    end
end)
